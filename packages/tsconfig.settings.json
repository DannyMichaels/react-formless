{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"sourceMap": true,
		"declaration": true,
		"preserveSymlinks": true,
		"jsx": "react",
		"lib": [
			"dom",
			"es2015.promise",
			"es2015",
			"esnext"
