{
	"name": "formless",
	"description": "Data driven react forms (written in ts)",
	"license": "MIT",
	"private": true,
	"version": "1.0.0",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "tsc -b packages/utils packages/core packages/antd packages/examples",
		"build:all": "lerna exec yarn build",
		"clean": "./cleanup.sh",
		"bootstrap": "lerna bootstrap",
		"test": "lerna exec yarn test",
		"info": "yarn workspaces info",
		"lint": "eslint 'packages/**/*.{ts,tsx}'"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "yarn run lint && yarn test"
		}
	},
	"lint-staged": {
		"*.{js,ts,tsx}": [
			"eslint --fix",
			"git add"
		]
	},
	"devDependencies": {
		"@testing-library/react-hooks": "3.2.1",
		"@types/enzyme": "3.10.4",
		"@types/enzyme-adapter-react-16": "1.0.5",
		"@types/jest": "25.1.1",
		"@types/react": "16.9.19",
		"enzyme": "3.11.0",
		"enzyme-adapter-react-16": "1.15.2",
		"eslint": "6.8.0",
		"eslint-config-prettier": "6.10.0",
		"eslint-plugin-import": "2.20.1",
		"eslint-plugin-prettier": "3.1.2",
		"eslint-plugin-react": "7.18.3",
		"eslint-plugin-react-app": "6.1.0",
		"eslint-plugin-react-hooks": "2.3.0",
		"husky": "4.2.1",
		"jest": "25.1.0",
		"lerna": "3.20.2",
		"lint-staged": "^10.0.7",
		"prettier": "1.19.1",
		"ts-jest": "25.1.0",
		"typescript": "3.7.5"
	},
	"dependencies": {
		"react": "16.12.0"
	},
	"optionalDependencies": {
		"fsevents": "2.1.2"
	}
}
